rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Profile images - users can upload/read their own images
    match /profileImages/{userId}_{timestamp}.{extension} {
      // Allow read access to all authenticated users (for leaderboards, etc.)
      allow read: if request.auth != null;
      
      // Allow write/delete only to the owner
      allow write, delete: if request.auth != null 
        && request.auth.uid == userId
        && resource == null // Only allow creation, not overwrite
        && request.resource.size < 5 * 1024 * 1024 // Max 5MB
        && request.resource.contentType.matches('image/.*'); // Images only
    }
    
    // Allow users to delete their own old profile images
    match /profileImages/{userId}_{allPaths=**} {
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Game assets and other public files (read-only)
    match /assets/{allPaths=**} {
      allow read: if true;
      allow write: if false; // Only admins can upload assets via console
    }
    
    // Bounty poster images (generated images)
    match /bountyPosters/{userId}_{timestamp}.{extension} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
